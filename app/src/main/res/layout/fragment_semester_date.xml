<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.schedule.SemesterDateFragment">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/ic_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/edit_semester_start_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:text="请选择学期开始时间"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="180dp"
        android:gravity="center" />

    <com.wlx.xmood.widget.TimePicker
        android:id="@+id/edit_semester_start_date_picker"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/edit_semester_start_date"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="点击此处开始选择"
        android:gravity="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/edit_semester_confirm"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="确认"
        app:layout_constraintTop_toBottomOf="@id/edit_semester_start_date_picker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
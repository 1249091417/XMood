<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.daily.edit.DailyEditActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/daily_edit_bar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_edit_daily"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/daily_edit_cancel"
                android:layout_marginStart="20dp"
                android:layout_gravity="start"
                android:gravity="start|center_vertical"
                android:text="取消"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/light_gray"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/daily_title"
                android:layout_gravity="center"
                android:text="日程"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/jet"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/daily_edit_save"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:text="保存"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/mandarin"
                tools:ignore="RtlHardcoded" />

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/daily_edit_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/daily_edit_bar" />

    <EditText
        android:id="@+id/daily_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/daily_edit_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="日程名称"
        android:textSize="24sp"
        android:theme="@style/MyEditTextTheme"
        />

    <TextView
        android:id="@+id/daily_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始时间"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/daily_event_name"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text ="2021年5月1日 10：00"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/daily_start"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/daily_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结束时间"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/daily_start"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text ="2021年5月1日 11：30"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/daily_end"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/daily_remind"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/daily_end"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="是否开启提醒"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/remind_switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:theme="@style/MySwitchTheme"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/daily_remind"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="备注"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:theme="@style/MyEditTextTheme"
            android:hint="请输入其他备注"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
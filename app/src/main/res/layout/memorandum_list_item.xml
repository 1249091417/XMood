<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/memorandum_note_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:text="Hello World"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/memorandum_note_body_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:text="hello world"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/memorandum_note_head"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/memorandum_note_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:text="2021年4月17日"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_update_24"
        app:layout_constraintTop_toBottomOf="@id/memorandum_note_body_simple"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/memorandum_note_catalog"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:maxWidth="40dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:text="安卓"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:background="@drawable/memorandum_catalog_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>